<script src="/javascripts/libs/jquery.js"></script>
<script src="/javascripts/libs/jquery-color.js"></script>
<script src="/javascripts/libs/uikit-js/uikit.min.js"></script>
<script src="/javascripts/libs/uikit-js/uikit-icons.min.js"></script>

<script src="/javascripts/libs/moment.js"></script>

<script>
  jQuery.fn.flash = function (color, duration) {
    let current = this.css('backgroundColor')
    this
      .animate({ backgroundColor: color }, duration / 2)
      .animate({ backgroundColor: current }, duration / 2)
  }
</script>